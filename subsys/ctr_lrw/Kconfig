config CTR_LRW
	bool "CTR_LRW"
	depends on HEAP_MEM_POOL_SIZE >= 8192
	select CTR_CONFIG
	select CTR_LRW_IF
	select CTR_RFMUX
	select CTR_SHELL
	select CTR_UTIL
	select PM_DEVICE
	select REQUIRES_FULL_LIBC
	select RING_BUFFER

if CTR_LRW

config CTR_LRW_THREAD_STACK_SIZE
	int "CTR_LRW_THREAD_STACK_SIZE"
	default 4096

config CTR_LRW_THREAD_PRIORITY
	int "CTR_LRW_THREAD_PRIORITY"
	default 10

module = CTR_LRW
module-str = CHESTER LoRaWAN Subsystem
source "subsys/logging/Kconfig.template.log_config"

endif # CTR_LRW
