config CTR_HYGRO
	bool "CTR_HYGRO"
	select CBPRINTF_FP_SUPPORT if CTR_HYGRO_LOG_LEVEL_DBG || CTR_HYGRO_SHELL
	select I2C
	select SENSOR
	select SHT3XD

if CTR_HYGRO

