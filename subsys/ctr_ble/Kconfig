	select MCUMGR_SMP_BT
	select MCUMGR_SMP_BT_CONN_PARAM_CONTROL
	select MCUMGR_SMP_REASSEMBLY_BT
	select OS_MGMT_MCUMGR_PARAMS

if CTR_BLE

module = CTR_BLE
module-str = CHESTER BLE Subsystem
source "subsys/logging/Kconfig.template.log_config"

endif # CTR_BLE

