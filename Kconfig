# 	depends on HIO_HYGRO
# endchoice

config HIO_HYGRO
	bool "HIO_HYGRO"
	select SENSOR
	select SHT3XD

config HIO_THERM
	bool "HIO_THERM"
	select SENSOR
	select TMP112

config HIO_RTC
	bool "HIO_RTC"

config HIO_TEST
	bool "HIO_TEST"

endif # HIO_SDK

