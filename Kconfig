menuconfig HIO_SDK
	bool "HIO_SDK"
	select BOOTLOADER_MCUBOOT
	select MCUMGR

if HIO_SDK

config HIO_BLE
	bool "HIO_BLE"
	select BT
	select BT_NUS
	select BT_PERIPHERAL
	select MCUMGR_CMD_IMG_MGMT
	select MCUMGR_CMD_OS_MGMT
	select MCUMGR_SMP_BT

config HIO_CHESTER_X3
	bool "HIO_CHESTER_X3"

config HIO_ACCEL
	bool "HIO_ACCEL"
	select SENSOR
	select LIS2DH

# Uncomment this when named choices get to mainline
