config CTR_K
	bool "HARDWARIO CHESTER-K (Differential Inputs) Driver"
	select CBPRINTF_FP_SUPPORT if CTR_SIGNAL_LOG_LEVEL_DBG
	select GPIO
	select GPIO_PCA953X
	select I2C
	select NRFX_PPI
	select NRFX_SAADC
	select NRFX_TIMER
	select NRFX_TIMER4
	select REQUIRES_FULL_LIBC

if CTR_K

module = CTR_K
module-str = ctr_k
source "subsys/logging/Kconfig.template.log_config"

config CTR_K_INIT_PRIORITY
	int "Init priority"
	default 99
	help
	  Device driver initialization priority.

endif # CTR_K
