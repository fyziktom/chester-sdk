/dts-v1/;

#include <nordic/nrf52840_qiaa.dtsi>

/ {
	model = "HARDWARIO CHESTER nRF52840";
	compatible = "hardwario,chester-nrf52840";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
	};

	buttons {
		compatible = "gpio-keys";

		btn_int: btn_int {
			gpios = <&gpio0 27 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "BTN_INT";
		};

		btn_ext: btn_ext {
			gpios = <&gpio0 26 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "BTN_EXT";
		};
	};

	led_rgy {
		compatible = "gpio-leds";
		label = "LED_RGY";

		led_r: led_r {
			gpios = <&gpio1 13 GPIO_ACTIVE_HIGH>;
		};

		led_g: led_g {
			gpios = <&gpio1 11 GPIO_ACTIVE_HIGH>;
		};

		led_y: led_y {
			gpios = <&gpio1 12 GPIO_ACTIVE_HIGH>;
		};
	};

	led_ext {
		compatible = "gpio-leds";
		label = "LED_EXT";

		led_ext: led_ext {
			gpios = <&gpio1 4 GPIO_ACTIVE_HIGH>;
		};
	};

	aliases {
		led0 = &led_r;
		led1 = &led_g;
		led2 = &led_y;
		led3 = &led_ext;
		sw0 = &btn_int;
		sw1 = &btn_ext;
	};
};

&adc {
	status = "okay";
};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&gpiote {
	status = "okay";
	/* interrupts = <6 NRF_DEFAULT_IRQ_PRIORITY>; */
};

&i2c0 {
	compatible = "nordic,nrf-twim";
	status = "okay";
	clock-frequency = <I2C_BITRATE_STANDARD>;
	sda-pin = <21>;
	scl-pin = <20>;

	lis2dh12: lis2dh12@19 {
		compatible = "st,lis2dh";
		reg = <0x19>;
		label = "LIS2DH12";
		irq-gpios = <&gpio0 19 GPIO_ACTIVE_HIGH>,
		            <&gpio0 17 GPIO_ACTIVE_HIGH>;
	};

	sht30: sht30@45 {
		compatible = "sensirion,sht3xd";
		status = "disabled";
		reg = <0x45>;
		label = "SHT30";
	};

	tmp112: tmp112@48 {
		compatible = "ti,tmp112";
		reg = <0x48>;
		label = "TMP112";
	};
};

&spi1 {
	compatible = "nordic,nrf-spi";
	status = "okay";
	sck-pin = <22>;
	mosi-pin = <32>;
	miso-pin = <24>;
	miso-pull-down;
	cs-gpios = <&gpio0 23 GPIO_ACTIVE_LOW>;

	flash1: at45db641e@0 {
		compatible = "atmel,at45";
		status = "okay";
		reg = <0>;
		spi-max-frequency = <85000000>;
		label = "NOR";
		jedec-id = [1f 28 00];
		size = <67108864>;
		sector-size = <262144>;
		block-size = <2048>;
		page-size = <256>;
		use-udpd;
		enter-dpd-delay = <3000>;  /* w/o use-udpd  <2000> */
		exit-dpd-delay = <100000>; /* w/o use-udpd <35000> */
	};
};

&uart0 {
	compatible = "nordic,nrf-uarte";
	status = "okay";
	current-speed = <115200>;
	tx-pin = <13>;
	rx-pin = <14>;
	/delete-property/ hw-flow-control;
	/delete-property/ rts-pin;
	/delete-property/ cts-pin;
};

&uart1 {
	compatible = "nordic,nrf-uarte";
	status = "okay";
	current-speed = <19200>;
	tx-pin = <7>;
	rx-pin = <8>;
	/delete-property/ hw-flow-control;
	/delete-property/ rts-pin;
	/delete-property/ cts-pin;
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x000000000 0x00012000>;
		};

		slot0_partition: partition@12000 {
			label = "image-0";
			reg = <0x00012000 0x000069000>;
		};

		slot1_partition: partition@7b000 {
			label = "image-1";
			reg = <0x0007b000 0x000069000>;
		};

		scratch_partition: partition@e4000 {
			label = "image-scratch";
			reg = <0x000e4000 0x00018000>;
		};

		storage_partition: partition@fc000 {
			label = "storage";
			reg = <0x000fc000 0x00004000>;
		};
	};
};
